header
  background: #ebebeb;
  position: fixed;
  right: 0
  left 0
  z-index: 1000
  div
    background: white
    ul
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
      li
        padding: 1em
        font-weight: 700;
        font-size: .8em
        cursor: pointer;
        text-transform: uppercase;
        color grey
        transition: color .5s ease
      li:hover
        color: #8ab01f
  .menu
    width: 3em
    height: 3em
    border-radius: 100%
    background: #8ab01f
    cursor: pointer
    i
      font-size: 2em
      color: white
  .header-nav
    padding: 2em 4em
    figure
      height: 4em;
      background-image: url(../img/parras-logotipo.png);
      background-repeat: no-repeat;
    .nav-opciones-icons
      font-size: 3em
      transition all 0.3s ease
      li
        cursor pointer
        color #575757;
        text-align: center
        width: 1.9em
        position relative
        transition: all .4s ease
      li:hover
        color #4d2865
      li.selected:after, li:hover:after
        content: attr(section);
        background: #4d2865;
        color white
        font-size: 1em;
        font-size: .23em;
        padding: .44em .3em;
        border-radius: 8px;
        position: absolute;
        left: 0;
        right: 0;
        bottom: -30px;
      li.selected:before, li:hover:before
        content: url('../img/morado.png')
        position: absolute;
        bottom: -18px;
        right: 25px;
        color #4d2865

.show-items
  height: 0 !important
  overflow: hidden
  transition all 0.3s ease
  list-style none
.padding-min
  padding: 0 4em !important
  transition all 0.3s ease

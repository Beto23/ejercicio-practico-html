header
  background: #ebebeb;
  position: fixed;
  right: 0
  left 0
  div
    background: white
    ul
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
      li
        padding: 1em
        font-weight: 700;
        font-size: .8em
        cursor: pointer;
        text-transform: uppercase;
        color grey
        transition: color .5s ease
      li:hover
        color: #8ab01f
  .header-nav
    padding: 2em 4em
    figure
      height: 4em;
      background-image: url(../img/parras-logotipo.png);
      background-repeat: no-repeat;
    .nav-opciones-icons
      font-size: 3em
      li
        cursor pointer
        color #575757;
        position relative
        transition: all .4s ease
      li:hover
        color #4d2865
      li.selected:after, li:hover:after
        content: "Historia";
        background: #4d2865;
        color white
        font-size: 1em;
        font-size: .3em;
        padding: 0.3em 1em;
        border-radius: 8px;
        position: absolute;
        left: 0;
        right: 0;
        bottom: -30px;
      li.selected:before, li:hover:before
        content: url('../img/morado.png')
        position: absolute;
        bottom: -18px;
        right: 16px;
        color #4d2865
